<body>
<form action='/orderflavors' method='POST'>
 Flavor Name:  <select name="orderflavor[flavor_id]">
    <% @flavors.each do |flavor| %>
      <option value="<%= flavor.id %>"><%= flavor.name  %> ($<%= flavor.cost %>)</option>
    <% end %>
  </select> <br/>
   Order Name:  <select name="orderflavor[order_id]">
    <% @orders.each do |order| %>
      <option value="<%= order.id %>"><%= order.first_name %></option>
    <% end %>
  </select> <br/>
  <br/>

  <input type='submit' value='Add Flavor'/>
</form>
</body>